<br><h1 align="center"> Searched Events</h1><br>
<div>
<table class="table table-bordered ">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Bar</th>
      <th>Teaser</th>
      <th>Day</th>
      <th>Date</th>
      <th>Start Time</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |berlin| %>
      <tr>
        <th scope="row"><%=berlin.id%></th>
        <td><%=berlin.title%></td>
        <td><%=berlin.bar%></td>
        <td><%=berlin.teaser%></td>
        <td><%=berlin.day%></td>
        <td><%=berlin.date%></td>
        <td><%=berlin.start_time%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
